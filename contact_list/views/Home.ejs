<html>

<head>
    <title>
        <%= title %>
    </title>
    <link rel="stylesheet" href="/css/home.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
        integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
</head>

<body>
    <div class="container col-md-8 d-flex justify-content-center ">
        <div class="card  w-50">
            <div class="card-header bg-primary">
                <h3 class="text-white"><i class="fa-regular fa-address-book fa-sm"></i> My Contacts List</h3>
            </div>
            <div class="card-body border-md shadow-sm">
                <ul class=" list-group ">
                    <% for (let i of contacts) { %>
                        <li class="border-sm shadow-sm list-group-item d-flex justify-content-around p-2">

                            <p class="text-success m-0">Name: <%=i.name %>
                            </p>
                            <p class="text-success m-0">Phoneno: <%=i.phoneno %>
                            </p>

                            <a href="/delete_contact/?phoneno=<%=i.phoneno %>"><i
                                    class="fa-solid fa-trash-can m-1 "></i></a>


                        </li>

                        <% }%>
                </ul>
            </div>


        </div>
    </div>



    <div class="container w-25 mt-5">
        <div class="card shadow-sm border-sm">
            <div class="card-body border-sm shadow-sm ">
                <form action="/create_contact" method="post">
                    <input class="form-control" type="text" name="name" placeholder="Enter Name" required>
                    <input class="form-control" type="number" name="phoneno" placeholder="Enter Phone no" required>
                    <button class="btn btn-primary mt-3 fs-9" type="submit">Add Contact</button>
                </form>
            </div>

        </div>


    </div>

    <script type="text/javascript" src="/js/home.js"> </script>
</body>

</html>